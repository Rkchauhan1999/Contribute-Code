public class Demo {

	public static void main(String[] args) {

int n = 153;
		int t = n;

		int l = 0;
		while (t != 0) {
			l = l + 1;
			t = t / 10;
		}
		System.out.println(l);

		int r;
		int t2 = n;
		int nn = 0;
		while (t2 != 0) {
			int ml = 1;
			r = t2 % 10;
			for (int i = 0; i < l; i++) {

				ml = ml * r;

			}
			nn = nn + ml;
			t2 = t2 / 10;
		}
		System.out.println(nn);

	}
}
